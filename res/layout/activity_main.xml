<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3FC380"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp" >

        <EditText
            android:id="@+id/edtTittle"
            android:layout_width="422dp"
            android:layout_height="43dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rightroundborder"
            android:ems="10"
            android:hint="enter tittle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp" >

        <EditText
            android:id="@+id/edtBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="enter description" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="10:04 12-3-2014"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="398dp" >

        <ImageButton
            android:id="@+id/btnAddVideo"
            android:layout_width="196dp"
            android:layout_height="401dp"
            android:background="#87D37C"
            android:src="@drawable/video48" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/btnAddAudio"
                        android:layout_width="128dp"
                        android:layout_height="132dp"
                        android:background="#6BB9F0"
                        android:src="@drawable/audio48" />

                    <ImageButton
                        android:id="@+id/btnAddPhoto"
                        android:layout_width="131dp"
                        android:layout_height="match_parent"
                        android:background="#4183D7"
                        android:src="@drawable/photo48" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnCreate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E26A6A"
                    android:src="@drawable/ok" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnGetLocation"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="0.13"
                android:background="#F4B350"
                android:src="@drawable/location48" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.71"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1BA39C"
            android:src="@drawable/cancel48" />

        <ImageButton
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9B59B6"
            android:src="@drawable/update48" />
    </LinearLayout>

</LinearLayout>